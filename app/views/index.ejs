    margin-right: 15px;
  }

  .section-info div {
    margin-left: 15px;
    width: 690px;
  }

  .section-info p {
    color: #010114A3;
  }

  .section-info strong {
    color: #fdb817;
  }

  /* ---------------------- // ---------------------- */

  .section-servicos {
    padding: 8px;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    padding: 45px;
    height: 550px;
  }

  .card-servicos {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    flex-direction: column;
    -webkit-box-shadow: 0px 0px 45px -15px rgba(0, 0, 0, 0.3);
    -moz-box-shadow: 0px 0px 45px -15px rgba(0, 0, 0, 0.3);
    box-shadow: 0px 0px 45px -15px rgba(0, 0, 0, 0.3);
    border-radius: 20px;
    transition: ease 0.2s;
  }

  .card-servicos:hover {
    scale: 1.01;
  }

  .card-servicos:hover img {
    filter: grayscale(0%);
  }

