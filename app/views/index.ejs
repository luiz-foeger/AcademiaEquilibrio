  /* ---------------------- // ---------------------- */

  .cabecalho {
    background-color: #020202;
    display: flex;
    justify-content: space-around;
    align-items: center;
    box-shadow: 0 1px 10px rgba(0, 0, 0, 0.078);
    height: 90px;
    font-family: 'Parkinsans', sans-serif;
    font-weight: 600;
  }

  .cabecalho img {
    display: flex;
    width: 60px;
    filter: invert(100%);
    /* margin: 165px; */
  }

  .itensHeader {
    display: flex;
    align-items: center;
    color: white;
  }

  .itensHeader ul li {
    font-size: 17px;
    display: inline;
    margin-right: 50px;
  }

  .itensHeader ul li a {
    text-decoration: none;
    color: #fff;
  }

  .itensHeader ul li a:hover {
    text-decoration: none;
    color: #fdb817;
  }

  /* ---------------------- // ---------------------- */

  footer {
    background-color: #020202;
    height: 130px;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 15px;
  }

  footer p {
    font-family: Inter, sans serif;
  }

  /* ---------------------- // ---------------------- */

  @media screen and (max-width: 1500px) {
    .cabecalho {
      height: 80px;
    }
  }

  @media screen and (max-width: 670px) {
    .cabecalho {
      height: 50px;
      width: 100%;
    }

    .cabecalho img {
      width: 125px;
    }

    .itensHeader ul li {
      font-size: 14px;
      margin: 0px 9px;
    }

    footer {
      height: 80px;
      font-size: 10px;
    }
